<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="qr_sale_order_form_view" model="ir.ui.view">
        <field name="name">qr.sale.order.form.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/notebook/page[@name='order_lines']/group" position="after">
                <group>
                    <field name="x_studio_enlace_de_pago"/>
                    <field name="x_studio_qr_de_pago" widget="image" class="oe_inline"/>
                </group>
            </xpath>
            <xpath expr="/form/header/button[last()]" position="after">
                <button name="generate_qr_code_button" class="btn-primary" type="object" string="Generar Codigo QR"/>
            </xpath>
        </field>
    </record>
</odoo>
